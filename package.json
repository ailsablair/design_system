{
  "name": "design_system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "storybook:dev": "NODE_OPTIONS='--max-old-space-size=4096' storybook dev -p 6006",
    "build-storybook": "NODE_OPTIONS='--max-old-space-size=8192' storybook build",
    "build-storybook:optimized": "NODE_OPTIONS='--max-old-space-size=8192 --optimize-for-size' storybook build --webpack-stats-json --quiet --loglevel warn",
    "build-storybook:memory": "NODE_OPTIONS='--max-old-space-size=4096' storybook build --quiet",
    "build-storybook:fast": "NODE_OPTIONS='--max-old-space-size=8192' storybook build --quiet --loglevel error",
    "build-storybook:safe": "NODE_OPTIONS='--max-old-space-size=6144' storybook build --quiet",
    "analyze-storybook": "npm run build-storybook:optimized && npx storybook-analyzer",
    "chromatic": "npx chromatic --project-token=chpt_3b449a46cc629ec",
    "chromatic:ci": "npx chromatic --project-token=chpt_3b449a46cc629ec --exit-zero-on-changes",
    "deploy": "npm run build-storybook:optimized && npm run chromatic:ci",
    "deploy:fast": "npm run build-storybook:fast && npm run chromatic:ci",
    "debug:chromatic": "node scripts/debug-chromatic.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@eslint/js": "^9.33.0",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-vitest": "^9.1.2",
    "@storybook/react-vite": "^9.1.2",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "chromatic": "^13.1.3",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.2",
    "globals": "^16.3.0",
    "playwright": "^1.54.2",
    "storybook": "^9.1.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
